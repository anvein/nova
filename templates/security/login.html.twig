{% extends 'base.html.twig' %}

{% block header_classes %}header-style3{% endblock %}
{% block header_start_logo_url %}/assets/img/logos/logo-2-dark.png{% endblock %}
{% block header_first_logo_url %}/assets/img/logos/logo-2-dark.png{% endblock %}
{% block header_second_logo_url %}/assets/img/logos/logo-2-light.png{% endblock %}

{% set title = 'Вход в административную панель' %}
{% block title %} {{ title }} {% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <section>
        <div class="container text-center justify-content-lg-center">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-heading left">
                        <h4>{{ title }}</h4>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="contact-form-box margin-30px-top">
                        <form method="post" class="off2">
                            <div class="row">
                                <div class="col-12">
                                    <input type="email" value="{{ last_username }}" name="email" placeholder="Email" required autofocus>
                                </div>
                                <div class="col-12">
                                    <input type="password" name="password" placeholder="Пароль" required>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                {#
                                   Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                   See https://symfony.com/doc/current/security/remember_me.html

                                   <div class="checkbox mb-3">
                                       <label>
                                           <input type="checkbox" name="_remember_me"> Remember me
                                       </label>
                                   </div>
                               #}

                                <div class="mfControls col-md-12">
                                    <button type="submit" class="btn-style2">Войти</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <br>
    <br>
{% endblock %}



